    <error errorCode="0" alias="NO_INPUT_HEADERS" message="Cannot output headers if there are no headers on the input files."/>
    <error errorCode="1" alias="NO_INPUT_FILES" message="No input files were provided for concatentation."/>
    <error errorCode="2" alias="SINGLE_INPUT_FILE" message="Cannot concatenate one file."/>
    <error errorCode="3" alias="INVALID_CSV_TYPE" message="The given type {} is not valid."/>
    <error errorCode="4" alias="INPUT_FORMAT_AND_DELIMETER" message="Cannot specify an input format and an input delimiter at the same time."/>
